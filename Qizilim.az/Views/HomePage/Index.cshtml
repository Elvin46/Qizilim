                            {

                                if (item2.EyarId == eyar.Id)
                                {
                                    @eyar.EyarOlcusu
                                }
                                            }
                                        }
                                    }
                </div>
                <div class="weight">@item.Weight gr</div><span class="sep-w-c">/</span>
